@model List<EPD_Finder.Models.ArticleResult>

<form asp-action="DownloadExcel" method="post">
    @foreach (var result in Model)
    {
        <input type="hidden" name="results" value="@Html.Raw(System.Text.Json.JsonSerializer.Serialize(result))" />
    }
    <button type="submit">Spara som Excel-fil</button>
</form>
<svg style="display:none;">
    <symbol id="copyIcon" viewBox="0 0 16 16">
        <!-- Windows copy-ikon: två överlappande ark -->
        <path d="M10 1.5a.5.5 0 0 1 .5.5v1h1A1.5 1.5 0 0 1 13 4.5v9A1.5 1.5 0 0 1 11.5 15h-7A1.5 1.5 0 0 1 3 13.5v-9A1.5 1.5 0 0 1 4.5 3h1v-1a.5.5 0 0 1 .5-.5h4zM4.5 4a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-7z" />
        <path d="M3 2a1 1 0 0 1 1-1h4v1H4a.5.5 0 0 0-.5.5v9h-1V2z" />
    </symbol>
</svg>

<table class="table">
    <thead>
        <tr>
            <th>ArtNr</th>
            <th>EPD-länkar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>@result.ENumber</td>
                <td style="position: relative;">
                    @if (!string.IsNullOrWhiteSpace(result.EpdLink) && result.EpdLink != "Ej hittad")
                    {
                        <a href="@result.EpdLink" target="_blank" class="epdLink">@result.EpdLink</a>
                        <button class="copyBtn" style="border:none; background:none; cursor:pointer;">
                            <svg width="24" height="24"><use href="#copyIcon"></use></svg>
                            <span class="copyCheck text-end">Kopierat ✔</span>
                        </button>  
                    }
                    else
                    {
                        <span style="color: red">@result.EpdLink</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
